---
interface Props {
  url?: string
  img?: string
  alt?: string
  title?: string
  footer: string
  children?: string | HTMLElement | HTMLElement[]
}

const {
  url = '#',
  img = '/mdi-book-open-page-variant.svg',
  alt = '',
  title = 'Default title',
  footer = 'Your name',
} = Astro.props
---

<div class="card">
  <div class="card__image_2">
    <img src={img} alt={alt} />
  </div>
  <div class="card__content">
    <h3>
      <a href={url}>{title}</a>
    </h3>
    <p class="pt-2">
      <slot>Default description.</slot>
    </p>
    <small>
      {footer}
    </small>
  </div>
</div>

<style is:global>
  .card {
    display: flex;
    flex-direction: column;
    border: 2px solid black;
    border-radius: 0.5rem;
    max-width: 60ch;
    min-height: 100%;
    position: relative;
    overflow: hidden;
    transition: box-shadow 0.15s ease-in-out;
  }

  .card:hover,
  .card:focus-within {
    box-shadow: 0 0 0 0.25rem;
  }

  .card:focus-within a:focus {
    text-decoration: none;
    box-shadow: none;
    outline: none;
  }

  .card__image_2 {
    display: flex;
    height: 10rem;
    justify-content: center;
  }

  .card__image_2 img {
    height: 150px;
    width: 150px;
    object-fit: fill;
    object-position: center;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1rem;
  }

  .card__content a {
    text-decoration: none;
  }

  .card__content a:focus {
    text-decoration: underline;
  }

  .card__content a::after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .card__content:last-child {
    margin-top: auto;
    padding-top: 2rem;
  }
</style>
